
<!-- indexer::stop -->
<div class="<?php echo $this->class; ?> block"<?php echo $this->cssID; ?><?php if ($this->style): ?> style="<?php echo $this->style; ?>"<?php endif; ?>>
    <?php if ($this->headline): ?>
        <<?php echo $this->hl; ?>><?php echo $this->headline; ?></<?php echo $this->hl; ?>>
    <?php endif; ?>
    <form action="<?php echo $this->action; ?>" id="<?php echo $this->formId; ?>" method="post" enctype="<?php echo $this->enctype; ?>">
        <div class="formbody">
            <input type="hidden" name="FORM_SUBMIT" value="<?php echo $this->formId; ?>">
            <input type="hidden" name="REQUEST_TOKEN" value="{{request_token}}">
            <?php foreach ($this->fields as $name => $field): ?>
                <div class="widget <?php echo $name; ?>">
                    <?php echo $field->generateWithError(); ?>
                    <?php if ($name == 'captcha'): ?>
                       <label for="ctrl_captcha"><?php echo $field->generateQuestion(); ?><span class="mandatory">*</span></label>
                    <?php else: ?>
                        <?php echo $field->generateLabel(); ?>
                    <?php endif; ?>
                </div>
            <?php endforeach; ?>
            <div class="submit_container">
                <input type="submit" class="submit" value="<?php echo $this->slabel; ?>">
            </div>
        </div>
    </form>
</div>
<!-- indexer::continue -->
